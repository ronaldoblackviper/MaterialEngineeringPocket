<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tugasbesarteknikmaterial">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Material Pocket"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.lulusanActivity"></activity>
        <activity android:name=".Activities.curriculumActivity" />
        <activity android:name=".Activities.infodosenActivity" />
        <activity android:name=".Activities.visimisiActivity" />
        <activity android:name=".Activities.postdetail"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activities.dashboard"
            android:screenOrientation="portrait"
            android:label="Dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.register"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.splashscreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MainActivity" />
    </application>

</manifest>