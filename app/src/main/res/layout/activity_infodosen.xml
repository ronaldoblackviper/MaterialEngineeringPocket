<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Activities.infodosenActivity">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logoinfo"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logomt"/>

        <TextView
            android:id="@+id/staf"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/logoinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Pengajar"/>

        <ImageView
            android:id="@+id/dosen1"
            android:layout_below="@id/staf"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dosen1"/>

        <ImageView
            android:id="@+id/dosen2"
            android:layout_below="@id/dosen1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dosen2"/>

        <ImageView
            android:id="@+id/dosen3"
            android:layout_below="@id/dosen2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dosen3"/>

        <ImageView
            android:id="@+id/dosen4"
            android:layout_below="@id/dosen3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dosen4"/>

        <ImageView
            android:id="@+id/dosen5"
            android:layout_below="@id/dosen4"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dosen5"/>

        <ImageView
            android:id="@+id/dosen6"
            android:layout_below="@id/dosen5"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dosen6"/>

    </RelativeLayout>

</ScrollView>