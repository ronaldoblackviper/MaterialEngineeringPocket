<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.mtFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:id="@+id/cardatas"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/vimi"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/visimisi"/>

        <TextView
            android:layout_marginTop="130dp"
            android:background="@color/colorPrimary"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Vision and Mision" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardkiri1"
        android:layout_below="@+id/cardatas"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="175dp"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="center"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/seminar"/>

        <TextView
            android:layout_marginTop="125dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:textAlignment="center"
            android:text="Dosen"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardkanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardatas"
        android:layout_alignEnd="@id/cardatas"
        android:layout_alignRight="@id/cardatas"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/cardkiri2"
        android:layout_toRightOf="@+id/cardkiri2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="7dp"
            android:paddingLeft="5dp"
            android:paddingTop="30dp"
            android:paddingRight="5dp"
            android:text="Majoring in material engineering includes the concentration of specialization in the field of material management"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="145dp"
            android:scaleType="center"
            android:src="@drawable/application" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="285dp"
            android:background="@color/colorPrimary"
            android:paddingTop="5dp"
            android:text="Curriculum"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardkiri2"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardkiri1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="center"
            android:src="@drawable/factory" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="120dp"
            android:background="@color/colorPrimary"
            android:paddingTop="5dp"
            android:text="Profile Lulusan"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

</RelativeLayout>